{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "cli-command",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path at which to create the command file, relative to the current workspace. Default is a folder with the same name as the pipe in the project root.",
      "visible": false
    },
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      }
    },
    "name": {
      "type": "string",
      "description": "The name of the command.",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use for the command?"
    },
    "skipTests": {
      "type": "boolean",
      "description": "Do not create \"spec.ts\" test files.",
      "default": false
    },
    "flat": {
      "type": "boolean",
      "description": "Create the new files at the top level of the current project.",
      "default": true
    },
    "export": {
      "type": "boolean",
      "description": "Specifies if the command should be exported from the project's entry point",
      "default": true
    },
    "parameter": {
      "type": "array",
      "description": "Parameters for the command",
      "items": {
        "type": "string"
      }
    },
    "option": {
      "type": "array",
      "description": "Options for the command",
      "items": {
        "type": "string"
      }
    }
  },
  "required": ["name"]
}
