{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "GbNxRefreshCli",
  "title": "Refreshes generated CLI application assets.",
  "description": "Refreshes generated CLI application assets.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      }
    },
    "all": {
      "type": "boolean",
      "description": "Specifies if all files should be generated"
    },
    "ts": {
      "type": "boolean",
      "description": "Specifies if command typescript definitions should be generated"
    },
    "main": {
      "type": "boolean",
      "description": "Specifies if build target main should be generated"
    },
    "markdown": {
      "type": "boolean",
      "description": "Specifies if commands.md should be generated"
    }
  },
  "required": []
}
