{
  "name": "junit",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/junit/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/junit",
        "main": "packages/junit/src/index.ts",
        "tsConfig": "packages/junit/tsconfig.lib.json",
        "packageJson": "packages/junit/package.json",
        "assets": [
          "packages/junit/*.md",
          {
            "input": "./packages/junit/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/junit/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/junit",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./packages/junit",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs junit {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/packages/junit",
        "{workspaceRoot}/junit/packages/junit.xml"
      ],
      "options": {
        "jestConfig": "packages/junit/jest.config.ts"
      }
    }
  },
  "tags": []
}
