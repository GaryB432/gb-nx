{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "Dependency",
  "title": "",
  "type": "object",
  "properties": {
    "project": {
      "type": "string",
      "description": "The project to add the dependency src to",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "dependency": {
      "type": "string",
      "description": "The dependent project to add",
      "$default": {
        "$source": "argv",
        "index": 1
      }
    },
    "scope": {
      "type": "string",
      "description": "The scope to prepend to the dependency name for the alias name"
    }
  },
  "additionalProperties": false,
  "required": ["project", "dependency"]
}
