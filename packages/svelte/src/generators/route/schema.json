{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "GbNxSvelteRoute",
  "title": "Create a route in a Svelte Kit project.",
  "description": "Create a route in a Svelte Kit project.",
  "examples": [
    {
      "command": "nx g @gb-nx/svelte:route myroute --project myapp --language scss",
      "description": "Generate a route in the myapp Svelte Kit package"
    }
  ],
  "type": "object",
  "properties": {
    "name": {
      "description": "The name of the route.",
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "project": {
      "description": "The Svelte project to target.",
      "type": "string",
      "$default": {
        "$source": "projectName"
      },
      "alias": "p",
      "x-prompt": "What Svelte project would you like to target?"
    },
    "directory": {
      "description": "Directory where the generated files are placed.",
      "type": "string",
      "aliases": ["dir", "path"]
    },
    "skipFormat": {
      "description": "Skip formatting files.",
      "type": "boolean",
      "default": false
    },
    "language": {
      "description": "Style language.",
      "type": "string",
      "enum": ["css", "scss"]
    }
  },
  "additionalProperties": false,
  "required": ["name", "project"]
}
