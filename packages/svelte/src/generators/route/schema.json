{
  "$schema": "http://json-schema.org/schema",
  "$id": "GbNxSvelteRoute",
  "title": "Create a route in a Svelte Kit project.",
  "description": "Create a route in a Svelte Kit project.",
  "examples": [
    {
      "command": "nx g @gb-nx/svelte:route myroute --project myapp --language scss",
      "description": "Generate a route in the myapp Svelte Kit package"
    }
  ],
  "type": "object",
  "properties": {
    "name": {
      "description": "The name of the route.",
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "project": {
      "description": "The Svelte project to target.",
      "type": "string",
      "$default": {
        "$source": "projectName"
      },
      "alias": "p"
    },
    "directory": {
      "description": "Directory where the generated files are placed.",
      "type": "string",
      "aliases": [
        "dir",
        "path"
      ]
    },
    "skipFormat": {
      "description": "Skip formatting files.",
      "type": "boolean",
      "default": false
    },
    "skipTests": {
      "description": "Do not create 'spec' test file for the route.",
      "type": "boolean",
      "default": false
    },
    "language": {
      "description": "Route script language (ts/js).",
      "type": "string",
      "enum": [
        "js",
        "ts"
      ],
      "default": "js"
    },
    "style": {
      "description": "Route style language (css/scss).",
      "type": "string",
      "enum": [
        "css",
        "scss"
      ],
      "default": "css"
    },
    "load": {
      "description": "Source of data for your load function",
      "type": "string",
      "enum": [
        "shared",
        "server",
        "none"
      ],
      "default": "none"
    }
  },
  "additionalProperties": false,
  "required": [
    "name"
  ]
}
