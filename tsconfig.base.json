{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "strict": true,
    "module": "esnext",
    "lib": ["es2019", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@gb-nx/browser": ["packages/browser/src/index.ts"],
      "@gb-nx/cli": ["packages/cli/src/index.ts"],
      "@gb-nx/svelte": ["packages/svelte/src/index.ts"],
      "@gb-nx/workspace": ["packages/workspace/src/index.ts"],
      "@gb-nx/workspace-plugin": ["tools/workspace-plugin/src/index.ts"],
      "gb-nx/junit": ["packages/junit/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
